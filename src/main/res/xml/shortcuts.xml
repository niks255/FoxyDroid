<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="25">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_update"
        android:shortcutId="updates_tab"
        android:shortcutShortLabel="@string/updates">
        <intent
            android:action="nya.kitsunyan.foxydroid.intent.action.UPDATES"
            android:targetPackage="nya.kitsunyan.foxydroid"
            android:targetClass="nya.kitsunyan.foxydroid.MainActivity">
        </intent>
    </shortcut>
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_launch"
        android:shortcutId="installed_tab"
        android:shortcutShortLabel="@string/installed">
        <intent
            android:action="nya.kitsunyan.foxydroid.intent.action.INSTALLED"
            android:targetPackage="nya.kitsunyan.foxydroid"
            android:targetClass="nya.kitsunyan.foxydroid.MainActivity">
        </intent>
    </shortcut>
</shortcuts>